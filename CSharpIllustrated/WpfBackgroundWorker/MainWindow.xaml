<Window x:Class="WpfBackgroundWorker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBackgroundWorker"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="170" Width="250">
    
    <StackPanel>
        
        <ProgressBar Name="progressBar" Height="20" Width="200" Margin="10" HorizontalAlignment="Center"/>
        
        <Button Name="btnProcess" Width="100" Click="btnProcess_Click" HorizontalAlignment="Center" Margin="10,15,10,10">Process</Button>
        
        <Button Name="btnCancel" Width="100" Click="btnCancel_Click" HorizontalAlignment="Center" Margin="10,0">Cancel</Button>
        
    </StackPanel>
</Window>
